<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BackgroundImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="LogoImageView">
        <item name="android:layout_width">@dimen/_90sdp</item>
        <item name="android:layout_height">@dimen/_90sdp</item>
        <item name="android:layout_marginLeft">@dimen/_25sdp</item>
        <item name="android:layout_marginTop">@dimen/_50sdp</item>
        <item name="srcCompat">@drawable/logo</item>
    </style>

    <style name="SettingsImageButton">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="srcCompat">@drawable/ic_settings</item>
        <item name="android:background">#24346C</item>
        <item name="android:layout_marginTop">@dimen/_108sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
    </style>

    <style name="OptionMenuButton">
        <item name="android:layout_width">@dimen/menu_button_width</item>
        <item name="android:layout_height">@dimen/menu_button_height</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">end</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textSize">@dimen/text_size_menu_options</item>
    </style>

    <style name="prevButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/previous</item>
    </style>

    <style name="nextButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/next</item>
    </style>

    <style name="profileElement">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_row">0</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/head</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>
</resources>